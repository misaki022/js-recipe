<div id="youso">ここの内容が変わるよ！！</div>
<buttom id ="buttom">押せば変わる</bottom>
<script>
//htmlからidを使って　要素を取得するコード
const element =document,getelementbyid("yoso")
console.log(element);

//要素の決められたプロパティの値を書き換えると、domを介して
//element.textcontent ="domを通じて変えたよ！"

//イベントが起きたタイミングでコードを実行する方法
butten.onclick = function(){
    element.textcontent ="domを通じて変えたよ！"
}
